{
  "mcp": {
    "servers": {
      "github": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "GITHUB_PERSONAL_ACCESS_TOKEN",
          "ghcr.io/github/github-mcp-server"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
        }
      },
      "filesystem": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "--volume=/Users/michaelpaulukonis/projects:/app/projects",
          "--volume=/Users/michaelpaulukonis/Documents:/app/Documents",
          "--volume=/Users/michaelpaulukonis/Downloads:/app/Downloads",
          "ghcr.io/mark3labs/mcp-filesystem-server:latest",
          "/app/projects",
          "/app/Documents",
          "/app/Downloads"
        ]
      },
      "context7": {
        "command": "npx",
        "args": [
          "-y",
          "@upstash/context7-mcp@latest"
        ]
      },
      "playwright": {
        "gallery": true,
        "command": "npx",
        "args": [
          "@playwright/mcp@latest"
        ]
      }
    },
    "inputs": [
      {
        "type": "promptString",
        "id": "mountPath",
        "description": "Local filesystem directory to mount into the Docker container at /data"
      },
      {
        "type": "promptString",
        "id": "allowedDirectory1",
        "description": "Path to the allowed directory"
      },
      {
        "id": "github_token",
        "type": "promptString",
        "description": "GitHub Personal Access Token",
        "password": true
      },
      {
        "type": "promptString",
        "id": "allowedDirectory1",
        "description": "Path to an allowed directory to expose via MCP"
      }
    ]
  }
}
